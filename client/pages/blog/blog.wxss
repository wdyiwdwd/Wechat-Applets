.tile {
  position: absolute;
  display: block;
  width: 100%;
  bottom: 3%;
  text-align: center;
}
.add-img {
  width: 130rpx;
  height: 130rpx;
}

.scroll {
  height: 1000rpx;
}

.display-item {
  width:80%;
  margin: 3% 10% 3% 10%;
}

.pictures {
  width: 100%;
  height: 370rpx;
  -moz-box-shadow:0px 0px 1px #7A7A7A;
  -webkit-box-shadow:0px 0px 1px #7A7A7A;
  box-shadow:0px 0px 1px #7A7A7A; 
}

.introduce {
  display: block;
  color: #B6CCE3;
}

 .add-view {
  height: 400rpx;
  position: absolute;
  width: 80%;
  bottom: 240rpx;
} 

.remark {
  color: gray;
  background-color: white;
  height: 200rpx;
  width: 100%;
}

.create-time {
  display: block;
  float: right;
  font-size: 30rpx;
  color: #F8CECC;
  margin-bottom: 30rpx;
  height: 35rpx;
}